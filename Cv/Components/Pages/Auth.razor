@page "/auth"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "ADMIN")]  // Changed to match database role

<PageTitle>Auth</PageTitle>

<h1>Edit Page</h1>

<AuthorizeView Roles="ADMIN"> 
    <Authorized>
        Hello @context.User.Identity?.Name!
    </Authorized>
    <NotAuthorized>
        <div class="alert alert-warning">
            Sorry, you need admin privileges to access this content.
        </div>
    </NotAuthorized>
</AuthorizeView>