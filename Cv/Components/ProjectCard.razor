@using Cv.Models

<div class="project-card">
    <h3>@Project.Title</h3>
    <p>@Project.Description</p>
    <div class="project-links">
        <a href="@Project.GitHubUrl" target="_blank" class="github-link">
            View on GitHub
        </a>
    </div>
</div>

<style>
    .project-card {
        background: white;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .github-link {
        display: inline-block;
        margin-top: 1rem;
        padding: 0.5rem 1rem;
        background: #24292e;
        color: white;
        text-decoration: none;
        border-radius: 4px;
        transition: opacity 0.2s;
    }

        .github-link:hover {
            opacity: 0.9;
        }
</style>

@code {
    [Parameter]
    public Project Project { get; set; }
}